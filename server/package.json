{
  "name": "server",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "ISC",
  "scripts": {
    "dev": "NODE_OPTIONS=--no-deprecation tsx watch src/server.ts",
    "start": "node -r module-alias/register dist/server.js",
    "build": "tsc",
    "generate:docs": "tsx src/scripts/generate-swagger.ts",
    "prisma:merge": "ts-node src/db/merge-prisma.ts",
    "prisma:generate": "pnpm run prisma:merge && prisma generate",
    "prisma:migrate": "pnpm run prisma:merge && prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force --skip-seed",
    "db:reset:seed": "prisma migrate reset --force --skip-generate --seed",
    "db:push": "prisma db push"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "@prisma/client": "6.9.0",
    "add": "^2.0.6",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.0",
    "concurrently": "^9.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "pnpm": "^10.7.0",
    "prisma": "^6.9.0",
    "request-promise": "^4.2.6",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/request-promise": "^4.1.51",
    "@types/swagger-ui-express": "^4.1.8",
    "body-parser": "^1.20.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
